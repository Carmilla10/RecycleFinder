<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#4CAF50"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="How to Use"
        app:titleTextColor="#FFFFFF" />

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Step 1: Find Recycle Centre -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:elevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1️⃣"
                        android:textSize="28sp"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Find Recycle Centre"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tap the 'Find Recycle Centre' button to view nearby recycling centers on a map. Click any location to see more details and contact information."
                    android:textSize="13sp"
                    android:textColor="#555555"
                    android:lineSpacingMultiplier="1.3"
                    android:layout_marginStart="40dp"/>
            </LinearLayout>

            <!-- Step 2: Set Reminder -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:elevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2️⃣"
                        android:textSize="28sp"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Set Reminder"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Click 'Set Recycle Reminder' to schedule reminders. Choose your preferred frequency and time to receive notifications reminding you to recycle."
                    android:textSize="13sp"
                    android:textColor="#555555"
                    android:lineSpacingMultiplier="1.3"
                    android:layout_marginStart="40dp"/>
            </LinearLayout>

            <!-- Step 3: View History -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:elevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3️⃣"
                        android:textSize="28sp"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="My Reminders"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Open the menu (☰) and tap 'My Reminders' to see all your scheduled reminders and manage them."
                    android:textSize="13sp"
                    android:textColor="#555555"
                    android:lineSpacingMultiplier="1.3"
                    android:layout_marginStart="40dp"/>
            </LinearLayout>

            <!-- Step 4: Use Menu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:elevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4️⃣"
                        android:textSize="28sp"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Navigation Menu"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tap the menu button (☰) at the top left to access Profile, Recycle Guidelines, About, and other features."
                    android:textSize="13sp"
                    android:textColor="#555555"
                    android:lineSpacingMultiplier="1.3"
                    android:layout_marginStart="40dp"/>
            </LinearLayout>

            <!-- Copyright -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="© 2026 RecycleFinder. All Rights Reserved."
                android:textSize="12sp"
                android:textColor="#999999"
                android:gravity="center"
                android:padding="16dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
